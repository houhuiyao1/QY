<!--关注-->
<view class="{{isFollowed ? 'c-btn-selected' : 'c-btn'}} {{isLoading ? 'btn-loading' : ''}}"
    bind:tap="onTap"
    bind:longpress="onTap">
    <view s-if="{{'text' === mode}}" class="text-btn {{textBtnClass}}">
        <text class="text">{{followText[followNum]}}</text>
        <view class="icon-follow"></view>
    </view>
    <view s-if="{{'icon' === mode}}" class="wrap-icon {{iconClass}}">
        <view class="icon-follow"></view>
    </view>
    <view s-if="{{'mixture' === mode}}" class="mixture-btn">
        <view class="icon-follow"></view>
        <text class="text">{{followText[followNum]}}</text>
    </view>
</view>
