<!--点赞-->
<view class="like {{isLiked ? 'has-like' : ''}} {{isAnimate ? 'animate' : ''}} {{'heart' === iconType ? 'heart-type' : ''}}"
    bind:tap="onTap"
    bind:longpress="onTap">
    <view s-if="{{'icon' === mode}}" class="icon-wrap">
        <view class="icon-like {{animationType === 1 ? 'icon-like-anim' : ''}}"></view>
        <view s-if="{{animationType === 2}}" class="icon-animate"></view>
    </view>
    <view s-if="{{'mixture' === mode}}" class="mixture-btn {{style === 'border' ? 'has-border' : ''}}">
        <view class="icon-box">
            <view class="icon-like {{animationType === 1 ? 'icon-like-anim' : ''}}"></view>
            <view s-if="{{animationType === 2}}" class="icon-animate"></view>
        </view>
        <text class="text">{{likeNum <= 0 ? likeText : likeNum}}</text>
    </view>
</view>
