<!--互动bar-->
<view class="communicate-bar">
    <view s-if="{{'special' === mode}}" class="mode-comment">
        <view class="comment-input {{isComment ? '' : 'disabled'}} {{showIconMsg ? 'comment-input-default' : ''}}"
            bind:tap="openReplyEditor">
            <view s-if="showIconMsg" class="icon-write"></view>
            <view class="comment-text">{{commentText}}</view>
        </view>
        <view s-if="isShowComment" class="item {{isComment ? '' : 'disabled'}}" bind:tap="commentMsg">
            <view class="comment-msg">
                <view class="icon-msg"></view>
                <view s-if="commentMsg" class="tip">{{commentMsg}}</view>
            </view>
        </view>
        <view s-if="isShowLike" class="item">
            <c-like
                icon-type="{{likeIconType}}"
                is-liked="{{isLiked}}"
                like-type="{{likeType}}"
                like-param="{{likeParam}}"
                animation-type="{{likeAnimationType}}"
                is-show-toast="{{likeToast.isShowToast}}"
                toast-text="{{likeToast.toastText}}"
                bind:error="error"
                bind:success="likeSuccess">
            </c-like>
        </view>
        <view s-if="isShowShare" class="item share" bind:tap="openShare">
            <view class="icon-share"></view>
        </view>
    </view>
    <view s-if="{{'nomarl' === mode}}" class="mode-no-comment">
        <view s-if="isShowShare" class="item share" bind:tap="openShare">
            <view class="icon-share"></view>
            <view class="share-text">{{shareText}}</view>
        </view>
        <view s-if="isShowComment" class="item {{isComment ? '' : 'disabled'}}" bind:tap="openReplyEditor">
            <view class="icon-msg"></view>
            <view class="msg-text">{{commentIconText}}</view>
        </view>
        <view s-if="isShowLike" class="item">
            <c-like
                mode="mixture"
                icon-type="{{likeIconType}}"
                like-text="{{likeText}}"
                like-num="{{likeNum}}"
                is-liked="{{isLiked}}"
                like-type="{{likeType}}"
                like-param="{{likeParam}}"
                animation-type="{{likeAnimationType}}"
                is-show-toast="{{likeToast.isShowToast}}"
                toast-text="{{likeToast.toastText}}"
                bind:error="error"
                bind:fail="likeFail"
                bind:success="likeSuccess">
            </c-like>
        </view>
    </view>
</view>
<c-comment-publisher
    show-publish="{= showPublish =}"
    send-background-color="{{sendBackgroundColor}}"
    send-text-color="{{sendTextColor}}"
    send-text="{{sendText}}"
    content-placeholder="{{contentPlaceholder}}"
    module-list="{{moduleList}}"
    emoji-path="{{emojiPath}}"
    focus="{{focus}}"
    is-upLoad-image="{{upLoadImage.isUpLoadImage}}"
    request-url="{{upLoadImage.requestUrl}}"
    comment-param="{{commentParam}}"
    bind:browsemode="browseMode"
    bind:error="error"
    bind:relasecomment="relaseComment"
    bind:close="commentPublisherClose"
    bind:previewimage="previewImage">
</c-comment-publisher>
