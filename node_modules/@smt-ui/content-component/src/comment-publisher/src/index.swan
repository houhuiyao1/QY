<view
 s-if="{{showPublish && canIUse}}"
 class="comment-entry {{platform === 'ios' ? 'ios-border-top' : 'android-border-top'}}"
 style="margin-bottom: {{bottomDistance + 'rpx'}};"
 >
    <!--评论发布器-->
    <view class="comment-operate" style="align-items: {{editMode ? 'flex-end' : 'center'}}">
        <view class="comment-input">
            <view s-if="!editMode" class="icon-input">
                <image class="icon-input-img" src="../images/icon-input.png"></image>
            </view>
            <textarea
                class="input-box"
                style="margin-left: {{editMode ? '23rpx' : '3rpx'}};"
                placeholder="{{placeholder}}"
                placeholder-style="color: #666"
                maxlength="999"
                value="{=inputValue=}"
                autoHeight="{{lineCount < 3 || !editMode}}"
                cursor-spacing="{{cursorSpacing}}"
                show-confirm-bar="{{false}}"
                focus="{=inputFocus=}"
                auto-focus="{{true}}"
                catchfocus="editMode"
                bindblur="browseMode"
                bindlinechange="lineChangeEvent"
            />
            <view
                s-if="editMode&&uploadImgUrl.length > 0"
                class="preview-img"
            >
                <image
                    style="width: 100%; height: 100%;"
                    src="{{uploadImgUrl[0]}}"
                    data-url="{{uploadImgUrl[0]}}"
                    bindtouchstart="previewImage"
                />
                <view class="delete-img"></view>
                <text class="delete-icon" bindtouchstart="deleteImg">X</text>
            </view>
        </view>
        <view class="release" bindtouchstart="releaseComment">发表</view>
    </view>

    <view
        s-if="editMode && isUpLoadImage"
        class="upload-img"
        bindtouchstart="uploadImg"
    >
        <image
            class="upload-img-icon"
            src="../images/icon-upload@3x.png"
        ></image>
    </view>
    <view s-if="showModal" class="pop">
        <view class="mask"></view>
        <view class="tip-modal">
            <view class="wrap-cont">
                <text class="title">发布成功</text>
                <text class="tip-cont">消息提示可到“我的-消息中心”查看</text>
            </view>
            <view class="tip-button" bindtap="closeModal">我知道了</view>
        </view>
    </view>
</view>
